{
  "name": "pagopa-functions-checkout",
  "description": "",
  "author": "pagoPA-checkout team",
  "repository": "https://github.com/pagopa/pagopa-functions-checkout",
  "version": "1.0.7",
  "license": "MIT",
  "scripts": {
    "prebuild": "shx rm -rf dist && yarn generate",
    "build": "tsc",
    "clean": "npm-run-all -s clean:*",
    "clean:dist": "rimraf dist",
    "clean:generated": "rimraf generated",
    "watch": "tsc -w",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env func start --javascript",
    "docker": "yarn clean && yarn generate && yarn build && docker-compose up",
    "predev": "npm-run-all generate build",
    "dev": "npm-run-all --parallel start watch",
    "test": "jest",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:integration": "jest --config=jest.integration.js --runInBand",
    "lint": "tslint -p .",
    "lint-api": "oval validate -p openapi/index.yaml",
    "dist:modules": "modclean -r -n default:safe && yarn install --production",
    "predeploy": "npm-run-all generate build dist:*",
    "pagopaproxy-mock:server": "node pagopaproxy-mock-server.js",
    "generate:definitions": "shx rm -rf ./generated/definitions && shx mkdir -p ./generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --no-strict --out-dir ./generated/definitions",
    "generate:pagopaproxy": "rimraf ./generated/pagopa-proxy && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-pagopa-proxy/v0.14.1/api_pagopa.yaml --no-strict --out-dir ./generated/pagopa-proxy --request-types --response-decoders --client",
    "generate": "npm-run-all generate:*",
    "preversion": "auto-changelog  --config .auto-changelog.json --unreleased --commit-limit false --stdout --template preview.hbs",
    "version": "auto-changelog -p --config .auto-changelog.json --unreleased && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@azure/functions": "^1.2.0",
    "@pagopa/openapi-codegen-ts": "^10.0.5",
    "@pagopa/danger-custom-rules": "^2.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^27.0.3",
    "@types/node-fetch": "^2.5.7",
    "@types/vfile-message": "^2.0.0",
    "auto-changelog": "2.2.1",
    "danger": "^10.6.6",
    "dotenv-cli": "^3.1.0",
    "italia-tslint-rules": "^1.1.3",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "modclean": "^3.0.0-beta.1",
    "npm-run-all": "^4.1.5",
    "oval": "^1.0.0",
    "prettier": "^1.18.2",
    "shx": "^0.3.2",
    "ts-jest": "^27.0.7",
    "tslint": "^5.17.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@pagopa/express-azure-functions": "^2.0.0",
    "@pagopa/io-functions-commons": "^21.7.1",
    "@pagopa/io-pagopa-commons": "^2.0.2",
    "@pagopa/ts-commons": "^10.2.0",
    "express": "^4.15.3",
    "fp-ts": "^2.11.1",
    "io-ts": "^2.2.16",
    "winston": "^3.2.1"
  },
  "resolutions": {
    "handlebars": "~4.7.7",
    "@pagopa/ts-commons": "^10.2.0"
  }
}
